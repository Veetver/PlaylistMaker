<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayListMakerSettingItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_64dp</item>
        <item name="android:paddingHorizontal">@dimen/default_padding_16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayListMakerSettingItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/settings_item_text</item>
        <item name="android:textSize">@dimen/text_h2_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="tint">@color/settings_item_icon</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PlayListMakerSettingItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/settings_item_icon</item>
    </style>

    <style name="PlaylistMakerMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin_16dp</item>
        <item name="android:layout_weight">@dimen/main_btn_weight</item>
        <item name="android:backgroundTint">@color/main_btn_background</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_h1_22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/main_btn_text</item>
        <item name="iconTint">@color/main_btn_icon</item>
        <item name="iconPadding">@dimen/icon_padding_8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/button_radius_16dp</item>
        <item name="android:insetBottom">@dimen/button_inset_0dp</item>
        <item name="android:insetTop">@dimen/button_inset_0dp</item>
        <item name="rippleColor">@color/main_btn_text</item>
    </style>

    <style name="Theme.PlaylistMaker.Settings.SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/settings_item_switch_thumb</item>
        <item name="trackTint">@color/settings_item_switch_track</item>
    </style>

    <style name="PlaylistMakerToolbarStyle">
        <item name="android:theme">@style/PlaylistMakerToolbarTheme</item>
        <item name="titleTextAppearance">@style/PlaylistMakerTitleTextAppearance</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaylistMakerToolbarTheme">
        <item name="toolbarNavigationButtonStyle">@style/PlaylistMakerNavigationButton</item>
    </style>

    <style name="PlaylistMakerTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_h1_22sp</item>
    </style>

    <style name="PlaylistMakerNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/default_title</item>
    </style>
</resources>