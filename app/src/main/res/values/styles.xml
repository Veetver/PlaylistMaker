<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlaylistMaker" />

    <style name="PlayListMaker.TextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">18.75sp</item>
    </style>

    <style name="PlayListMaker.TextAppearance.Toolbar" parent="PlayListMaker.TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_h1_22sp</item>
    </style>

    <style name="PlayListMaker.TextAppearance.SettingsItem" parent="PlayListMaker.TextAppearance">
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PlayListMaker.TextAppearance.TabLayout" parent="PlayListMaker.TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayListMaker.TextAppearance.SearchActivityButton" parent="PlayListMaker.TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayListMaker.TextAppearance.Button" parent="PlayListMaker.TextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_h1_22sp</item>
    </style>

    <style name="PlaylistMaker.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetBottom">@dimen/button_inset_0dp</item>
        <item name="android:insetTop">@dimen/button_inset_0dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="PlaylistMaker.Button.UnelevatedButton.RoundedCorner" parent="PlaylistMaker.Button.UnelevatedButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="cornerRadius">54sp</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_16dp</item>
        <item name="android:textAppearance">
            @style/PlayListMaker.TextAppearance.SearchActivityButton
        </item>
    </style>

    <style name="PlaylistMaker.Button.UnelevatedButton.RoundedCorner.Large" parent="PlaylistMaker.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin_16dp</item>
        <item name="android:layout_weight">@dimen/main_btn_weight</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/main_btn_icon</item>
        <item name="iconPadding">@dimen/icon_padding_8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="cornerRadius">@dimen/button_radius_16dp</item>
        <item name="android:textAppearance">@style/PlayListMaker.TextAppearance.Button</item>
    </style>


    <style name="Theme.PlaylistMaker.Settings.SwitchMaterial" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/settings_item_switch_thumb</item>
        <item name="trackTint">@color/settings_item_switch_track</item>
    </style>

    <style name="PlayListMakerSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/blue_text_cursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/edit_text_search_icon</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/edit_text_text</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_h2_16sp</item>
    </style>


    <style name="PlaylistMakerToolbarStyle">
        <item name="android:theme">@style/PlaylistMakerToolbarTheme</item>
        <item name="titleTextAppearance">@style/PlayListMaker.TextAppearance.Toolbar</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaylistMakerToolbarTheme">
        <item name="toolbarNavigationButtonStyle">@style/PlaylistMakerToolbarNavigationButtonStyle
        </item>
    </style>

    <style name="PlaylistMakerToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/default_title</item>
    </style>

    <!-- -->
    <style name="PlaylistMakerToolbarStyle.PlaylistDetails" parent="PlaylistMakerToolbarStyle">
        <item name="android:theme">@style/PlaylistMakerToolbarTheme.PlaylistDetails</item>
    </style>

    <style name="PlaylistMakerToolbarTheme.PlaylistDetails" parent="PlaylistMakerToolbarTheme" >
        <item name="toolbarNavigationButtonStyle">@style/PlaylistMakerToolbarNavigationButtonStyle.PlaylistDetails
        </item>
    </style>

    <style name="PlaylistMakerToolbarNavigationButtonStyle.PlaylistDetails" parent="PlaylistMakerToolbarNavigationButtonStyle">
        <item name="tint">@color/YP_Black</item>
    </style>
    <!-- -->


    <style name="PlaylistMakerRecyclerItemTrackName">
        <item name="android:textColor">@color/search_item_track_name</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaylistMakerRecyclerItemTrackDetails">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/search_item_details</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlayListMakerSettingItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_64dp</item>
        <item name="android:paddingHorizontal">@dimen/default_padding_16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="PlayListMakerSettingItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/settings_item_text</item>
        <item name="tint">@color/settings_item_icon</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/PlayListMaker.TextAppearance.SettingsItem</item>
    </style>

    <style name="PlayListMakerSettingItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/settings_item_icon</item>
    </style>

    <style name="PlaylistMaker.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="tabIndicatorColor">@color/libraryTabIndicatorColor</item>
        <item name="tabBackground">@color/default_background</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/PlayListMaker.TextAppearance.TabLayout</item>
        <item name="tabTextColor">@color/libraryTabTextColor</item>
    </style>

    <style name="PlaylistMaker.Placeholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/placeholder_text</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="PlaylistMaker.BottomNavView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_icon_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_selector</item>
        <item name="itemRippleColor">@color/YP_Blue</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemTextAppearanceActive">@style/PlaylistMaker.BottomNavView.Active</item>
        <item name="itemTextAppearanceInactive">@style/PlaylistMaker.BottomNavView.Inactive</item>
    </style>

    <style name="PlaylistMaker.BottomNavView.Active" parent="PlayListMaker.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaylistMaker.BottomNavView.Inactive" parent="PlaylistMaker.BottomNavView.Active" />


    <style name="PlaylistMaker.EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">18.75sp</item>
        <item name="android:textFontWeight">400</item>

        <item name="cursorColor">@color/YP_Blue</item>

        <item name="boxStrokeColor">@color/edit_text_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">@color/default_title</item>
        <item name="hintTextColor">@color/YP_Blue</item>
    </style>

    <style name="PlaylistMaker.Button.UnelevatedButton.RoundedCorner.NewPlaylist" parent="PlaylistMaker.Button.UnelevatedButton.RoundedCorner">
        <item name="android:background">@drawable/button_with_ripple_new_playlist</item>
        <item name="backgroundTint">@color/button_background_tint_color_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_32dp</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lineHeight">18.75sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_h2_16sp</item>

        <item name="rippleColor">@color/YP_TEXT_GRAY</item>
    </style>

    <style name="PlaylistMaker.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/materialAlertButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/materialAlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/materialAlertButtonStyle</item>
    </style>

    <style name="materialAlertButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/default_title</item>
    </style>
</resources>