<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        style="@style/PlaylistMakerToolbarStyle"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/settings"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_64dp"
        android:paddingHorizontal="@dimen/default_padding_16dp"
        android:text="@string/dark_theme"
        android:textColor="@color/settings_text"
        android:textSize="@dimen/text_h2_16sp" />

    <FrameLayout style="@style/PlayListMakerSettingItemContainer">

        <TextView
            style="@style/PlayListMakerSettingItemTextView"
            android:text="@string/share" />

        <ImageView
            style="@style/PlayListMakerSettingItemImageView"
            android:src="@drawable/share_light_mode" />
    </FrameLayout>

    <FrameLayout style="@style/PlayListMakerSettingItemContainer">

        <TextView
            style="@style/PlayListMakerSettingItemTextView"
            android:text="@string/support" />

        <ImageView
            style="@style/PlayListMakerSettingItemImageView"
            android:src="@drawable/support_light_mode"/>
    </FrameLayout>

    <FrameLayout style="@style/PlayListMakerSettingItemContainer">

        <TextView
            style="@style/PlayListMakerSettingItemTextView"
            android:text="@string/eula" />

        <ImageView
            style="@style/PlayListMakerSettingItemImageView"
            android:src="@drawable/arrow_forward_light_mode" />
    </FrameLayout>

</LinearLayout>