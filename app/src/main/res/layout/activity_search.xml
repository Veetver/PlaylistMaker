<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_background"
    android:orientation="vertical"
    tools:context=".search.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search"
        style="@style/PlaylistMakerToolbarStyle"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_16dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_edit_text"
            style="@style/PlayListMakerSearchEditText" />

        <ImageView
            android:id="@+id/clear_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/clear_edit_text"
            android:src="@drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"
            app:drawableTint="@color/edit_text_search_icon"
            app:tint="@color/edit_text_search_icon" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/search_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search_placeholder_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="112dp"
                tools:src="@drawable/error_search_placeholder" />

            <TextView
                android:id="@+id/search_placeholder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:textAlignment="center"
                android:textColor="@color/search_placeholder_text"
                android:textFontWeight="400"
                android:textSize="19sp"
                tools:text="@string/search_error" />

            <Button
                android:id="@+id/search_retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/search_retry_btn_tint"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/search_retry_btn"
                android:textColor="@color/search_retry_btn_text"
                android:textFontWeight="500"
                android:textSize="14sp"
                app:rippleColor="@color/search_retry_btn_text" />

        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin_16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/search_history_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingVertical="16dp"
            android:text="@string/search_history_title"
            android:textAlignment="center"
            android:textFontWeight="500"
            android:textSize="19sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/search_clear_history_btn_tint"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/search_history_clear"
            android:textColor="@color/search_clear_history_btn_text"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:cornerRadius="54dp"
            app:rippleColor="@color/search_clear_history_btn_text"

            />
    </LinearLayout>

</LinearLayout>