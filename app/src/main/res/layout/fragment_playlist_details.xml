<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playlist_details.presentation.ui.PlaylistDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playlist_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#E6E8EB">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/PlaylistMakerToolbarStyle"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/arrow_back" />

        <ImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/cover_player_placeholder"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:fontFamily="@font/ys_display_bold"
            android:lineHeight="28.13sp"
            android:textColor="@color/YP_Black"
            android:textFontWeight="700"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover_iv"
            tools:text="[Best songs 2021]" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21.1sp"
            android:textColor="@color/YP_Black"
            android:textFontWeight="400"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            tools:text="[2022]" />

        <TextView
            android:id="@+id/total_track_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21.1sp"
            android:textColor="@color/YP_Black"
            android:textFontWeight="400"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/dot_iv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_tv"
            tools:text="[300 минут]" />

        <ImageView
            android:id="@+id/dot_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            app:layout_constraintBottom_toBottomOf="@+id/total_track_time_tv"
            app:layout_constraintEnd_toStartOf="@+id/collection_track_count_tv"
            app:layout_constraintStart_toEndOf="@+id/total_track_time_tv"
            app:layout_constraintTop_toTopOf="@+id/total_track_time_tv"
            app:tint="@color/YP_Black" />

        <TextView
            android:id="@+id/collection_track_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21.1sp"
            android:textColor="@color/YP_Black"
            android:textFontWeight="400"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@id/total_track_time_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dot_iv"
            tools:text="[98 треков]" />

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16dp"
            android:layout_marginTop="@dimen/default_margin_16dp"
            android:src="@drawable/share"
            app:layout_constraintEnd_toStartOf="@+id/menu_iv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_track_time_tv"
            app:tint="@color/YP_Black" />

        <ImageView
            android:id="@+id/menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16dp"
            android:layout_marginEnd="@dimen/default_margin_16dp"
            android:src="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/share_iv"
            app:layout_constraintTop_toTopOf="@id/share_iv"
            app:tint="@color/YP_Black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottoms_sheet_bg"
        app:behavior_hideable="false"
        app:behavior_peekHeight="100dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/bottom_sheet_control_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_control"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_list_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_control_iv"
            tools:itemCount="5"
            tools:listitem="@layout/item_recyclerview_search_activity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>