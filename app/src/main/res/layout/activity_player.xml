<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_player"
        style="@style/PlaylistMakerToolbarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/cover_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_player"
        tools:src="@drawable/cover_player_placeholder" />

    <TextView
        android:id="@+id/track_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/text_player"
        android:textFontWeight="400"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cover_placeholder"
        tools:text="Yesterday (Remastered 2009)" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/text_player"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        tools:text="The Beatles" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/add_to_collection"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"
        app:layout_constraintEnd_toStartOf="@id/imageView2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/play"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/artist_name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/add_to_favorite"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/imageView2" />

    <TextView
        android:id="@+id/track_time_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="@string/placeholder_track_time_progress"
        android:textColor="@color/text_player"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/track_time_progress">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/track_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/track_time_title"
                    android:textColor="@color/info_title_player"
                    android:textFontWeight="400"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/track_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/text_player"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    tools:text="5:35" />
            </TableRow>

            <TableRow android:id="@+id/collection_container">

                <TextView
                    android:id="@+id/collection_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/collection_name_title"
                    android:textColor="@color/info_title_player"
                    android:textFontWeight="400"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/collection_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/text_player"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    tools:text="Yesterday (Remastered 2009)" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/release_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/release_date_title"
                    android:textColor="@color/info_title_player"
                    android:textFontWeight="400"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/text_player"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    tools:text="1965" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/primary_genre_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/primary_genre_name_title"
                    android:textColor="@color/info_title_player"
                    android:textFontWeight="400"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/primary_genre_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/text_player"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    tools:text="Rock" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/country_title"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical"
                    android:text="@string/country_title"
                    android:textColor="@color/info_title_player"
                    android:textFontWeight="400"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/text_player"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    tools:text="Великобритания" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>