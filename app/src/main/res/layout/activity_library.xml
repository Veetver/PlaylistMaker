<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".library.ui.LibraryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_library"
        style="@style/PlaylistMakerToolbarStyle"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/library" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/library_tab_layout"
        style="@style/PlaylistMaker.TabLayout" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/library_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>