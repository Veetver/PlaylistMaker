<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".search.ui.SearchFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search"
        style="@style/PlaylistMakerToolbarStyle"
        app:title="@string/search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_16dp"
        android:paddingVertical="8dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_edit_text"
            style="@style/PlayListMakerSearchEditText" />

        <ImageView
            android:id="@+id/clear_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/clear_edit_text"
            android:src="@drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"
            app:drawableTint="@color/edit_text_search_icon"
            app:tint="@color/edit_text_search_icon" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/search_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search_placeholder_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="112dp"
                tools:src="@drawable/error_search_placeholder" />

            <TextView
                android:id="@+id/search_placeholder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary"
                android:textFontWeight="400"
                android:textSize="19sp"
                tools:text="@string/search_error" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/search_retry_btn"
                style="@style/PlaylistMaker.Button.UnelevatedButton.RoundedCorner"
                android:text="@string/search_retry_btn" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/search_history_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/search_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingVertical="@dimen/default_padding_16dp"
            android:text="@string/search_history_title"
            android:textAlignment="center"
            android:textFontWeight="500"
            android:textSize="19sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recyclerview_search_activity" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_history_btn"
            style="@style/PlaylistMaker.Button.UnelevatedButton.RoundedCorner"
            android:text="@string/search_history_clear" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/search_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:indeterminateTint="@color/progress_bar_color"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recyclerview_search_activity" />

</LinearLayout>